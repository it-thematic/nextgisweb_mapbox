<div data-dojo-type="${baseClass}" data-dojo-attach-point="focusNode"
     data-ngw-serialize-prefix="${prefix}"
     class="padding-block">

    <div data-dojo-type="dojox/layout/TableContainer" data-dojo-props="cols:1, labelWidth: 100">
        <div data-dojo-attach-point="wSprite"
             data-dojo-type="ngw-resource/ResourceBox"
             data-dojo-props="cls: 'mapbox_sprite', required: false, maxHeight: -1, dialogTitle: '{{gettext
                     'Select sprite resource'}}'"
             data-ngw-serialize="sprite"
             title="{{gettext 'Sprite'}}" style="width: 100%"></div>

        <div data-dojo-attach-point="wGlyph"
             data-dojo-type="ngw-resource/ResourceBox"
             data-dojo-props="cls: 'mapbox_glyph', required: false, maxHeight: -1, dialogTitle: '{{gettext
                     'Select glyph resource'}}'"
             data-ngw-serialize="glyphs"
             title="{{gettext 'Glyph'}}" style="width: 100%"></div>
    </div>

    <div data-dojo-type="dijit/layout/BorderContainer"
         data-dojo-props="gutters: false"
         style="width: 100%; height: 100%">

        <div data-dojo-type="dijit/Toolbar" data-dojo-props="region: 'top'">
            <div data-dojo-type="dijit/form/Button"
                 data-dojo-props="iconClass: 'dijitEditorIcon dijitEditorIconIndent'"
                 data-dojo-attach-event="onClick: beautify">
                {{gettext 'Beautify'}}
            </div>
        </div>

        <div data-dojo-attach-point="style"
             data-dojo-type="ngw-pyramid/form/CodeMirror"
             data-dojo-props="region: 'center', lang: 'javascript', lineNumbers: true"
             data-ngw-serialize="style"
             style="border: 1px; width: 100%; height: 100%;">
        </div>

    </div>
</div>